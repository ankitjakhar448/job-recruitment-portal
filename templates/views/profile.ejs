<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script>
    $(document).ready(function () {
        $("#prform").hide()


        $.get('/portfolio', function (data, status) {
        
            $("#name").val(data.name)
            $("#email").val(data.owner.email)
            $("#bio").val(data.bio)
            

            $("#tname").text(data.name)
            $("#temail").text(data.owner.email)
            $("#tbio").text(data.bio)
          /*   $("#tskills").text(data.poskills)
             $("#texp").text(data.portfolio.experience)
             $("#tcollege").text(data.portfolio.college)
             $("#tdegree").text(data.portfolio.degree)
             $("#tlastjob").text(data.portfolio.lastJob)
         */



            $("#fbtn").click(function () {

                $("#name").prop("disabled", false);
                $("#prform").slideUp()
                $("#prtable").slideDown()
            })
            $("#tbtn").click(function () {

                $("#prtable").slideUp()
                $("#prform").slideDown()
            })


        })
    })
</script>

